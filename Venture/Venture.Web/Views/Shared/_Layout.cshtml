<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Project Venture</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/cts")
</head>
<body style="background-color:#bfa87c">
    <div class="navbar navbar-fixed-top" style="background:inherit">
        <div class="container top-bar">
            <div class="navbar-header">
                <div class="top-bar-buttons">
                    <button id="saveProject" form="projectDetailsForm">
                        <i class="fas fa-save"></i>
                        Save
                    </button>
                    <button id="newProject">
                        <i class="far fa-file"></i>
                        New
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="body-content container-fluid venture-page">
            <div class="row">
                <div class="col-md-2" style="">
                    @{ Html.RenderAction("SideBar", "ViewToday");}
                </div>
                <div class="col-md-10">
                    @RenderBody()
                </div>
            </div>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $('#newProject').on("click", function () {
        if ($('#projectDetailsForm').data("changed")) {
            if (confirm("Do you want to save your changes")) {
              $('#projectDetailsForm').submit();
            }
        }
        window.location = '@Url.Action("ProjectMaintenance", "ProjectMaintenance")';
    });

    $('#projectDetailsForm').on("submit", function (e) {
        var id = 0;
        if (confirm("Do you wish to Save Changes") && $('#projectDetailsForm').valid()) {
        }
        else {
            e.preventDefault();
        }
    });


</script>
